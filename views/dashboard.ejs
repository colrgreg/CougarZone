                        status: 'active',
                        ticketCode: ticketCode
                    };

                    await db.collection('tickets').add(ticket);

                    alert('Payment successful! Your ticket has been added to your account.');
                    closeCheckout();
                    loadEvents();
                    loadUserTickets();
                    document.querySelector('[data-tab="tickets"]').click();
                } catch (error) {
                    console.error("Error creating ticket:", error);
                    alert("Failed to process payment. Please try again.");
                } finally {
                    submitBtn.disabled = false;
                    submitBtn.textContent = 'Complete Purchase';
                }
            }, 1500);
        }

        function generateTicketCode() {
            return 'TKT-' + Math.random().toString(36).substr(2, 9).toUpperCase();
        }

        async function loadUserTickets() {
            const upcomingList = document.getElementById('upcomingTicketsList');
            const pastList = document.getElementById('pastTicketsList');

            if (!currentUser) return;

            try {
                const snapshot = await db.collection('tickets')
                    .where('userId', '==', currentUser.uid)
                    .orderBy('purchaseDate', 'desc')
                    .get();

                if (snapshot.empty) {
                    upcomingList.innerHTML = `<div class="empty-state"><div class="empty-state-icon">üé´</div><h3>No tickets yet</h3></div>`;
                    pastList.innerHTML = `<div class="empty-state"><div class="empty-state-icon">üìÖ</div><h3>No past events</h3></div>`;
                    return;
                }

                const upcomingTickets = [];
                const pastTickets = [];
                const today = new Date();
                today.setHours(0, 0, 0, 0);

                snapshot.forEach(doc => {
                    const ticket = { id: doc.id, ...doc.data() };
                    const eventDate = new Date(ticket.eventDate + 'T00:00:00');
                    eventDate.setHours(0, 0, 0, 0);

                    if (eventDate < today) {
                        ticket.status = 'expired';
                        pastTickets.push(ticket);
                    } else {
                        ticket.status = 'active';
                        upcomingTickets.push(ticket);
                    }
                });

                if (upcomingTickets.length === 0) {
                    upcomingList.innerHTML = `<div class="empty-state"><div class="empty-state-icon">üé´</div><h3>No upcoming events</h3></div>`;
                } else {
                    upcomingList.innerHTML = '';
                    upcomingTickets.forEach(ticket => {
                        upcomingList.appendChild(createTicketCard(ticket));
                    });
                }

                if (pastTickets.length === 0) {
                    pastList.innerHTML = `<div class="empty-state"><div class="empty-state-icon">üìÖ</div><h3>No past events</h3></div>`;
                } else {
                    pastList.innerHTML = '';
                    pastTickets.forEach(ticket => {
                        pastList.appendChild(createTicketCard(ticket));
                    });
                }
            } catch (error) {
                console.error("Error loading tickets:", error);
            }
        }

        function createTicketCard(ticket) {
            const purchaseDate = ticket.purchaseDate ? ticket.purchaseDate.toDate() : new Date();

            const ticketCard = document.createElement('div');
            ticketCard.className = 'ticket-card';
            ticketCard.innerHTML = `
                <div class="ticket-info">
                    <h3>${ticket.eventEmoji} ${ticket.eventTitle}</h3>
                    <p style="color: var(--text-light);">
                        üìÖ ${ticket.eventDate} at ${ticket.eventTime}
                    </p>
                    <p style="color: var(--text-light);">
                        üìç ${ticket.eventLocation}
                    </p>
                    <p style="color: var(--text-light); font-size: 0.9rem;">
                        Purchased: ${purchaseDate.toLocaleDateString()}
                    </p>
                    <span class="ticket-status ${ticket.status}">${ticket.status.toUpperCase()}</span>
                </div>
                <div>
                    <p style="font-size: 1.5rem; font-weight: bold; color: var(--primary-color);">
                        ${ticket.price.toFixed(2)}
                    </p>
                    ${ticket.status === 'active' ? `<button class="btn btn-secondary" onclick="openQRCode('${ticket.ticketCode}', '${ticket.eventTitle}')">View QR Code</button>` : ''}
                </div>
            `;
            return ticketCard;
        }

        function openQRCode(ticketCode, eventTitle) {
            document.getElementById('qrTitle').textContent = `${eventTitle} - QR Code`;
            document.getElementById('ticketCodeDisplay').textContent = ticketCode;

            // We'll fetch the ticket data and create a detailed QR code
            db.collection('tickets').where('ticketCode', '==', ticketCode).limit(1).get().then(snapshot => {
                if (!snapshot.empty) {
                    const ticketData = snapshot.docs[0].data();
                    
                    // Create a detailed data string for the QR code
                    const qrData = {
                        ticketCode: ticketCode,
                        firstName: currentUser.displayName || userFirstName || 'N/A',
                        lastName: 'N/A', // We'll fetch this
                        email: ticketData.userEmail,
                        eventTitle: ticketData.eventTitle,
                        eventDate: ticketData.eventDate,
                        eventTime: ticketData.eventTime,
                        eventLocation: ticketData.eventLocation,
                        price: ticketData.price,
                        status: ticketData.status
                    };

                    // Fetch user's last name
                    db.collection('users').doc(ticketData.userId).get().then(userDoc => {
                        if (userDoc.exists) {
                            const userData = userDoc.data();
                            qrData.firstName = userData.firstName || 'N/A';
                            qrData.lastName = userData.lastName || 'N/A';
                        }

                        // Convert to formatted string
                        const qrString = `TICKET INFO
Name: ${qrData.firstName} ${qrData.lastName}
Email: ${qrData.email}
Ticket ID: ${qrData.ticketCode}
Event: ${qrData.eventTitle}
Date: ${qrData.eventDate}
Time: ${qrData.eventTime}
Location: ${qrData.eventLocation}
Price: ${qrData.price.toFixed(2)}
Status: ${qrData.status.toUpperCase()}`;

                        // Use QR Server API with the detailed data
                        const qrImageUrl = `https://api.qrserver.com/v1/create-qr-code/?size=300x300&data=${encodeURIComponent(qrString)}`;
                        
                        const qrImage = document.getElementById('qrcodeImage');
                        qrImage.src = qrImageUrl;
                        qrImage.style.display = 'block';

                        document.getElementById('qrcode').style.display = 'none';
                        document.getElementById('qrModal').classList.add('active');
                    });
                } else {
                    console.error('Ticket not found');
                }
            });
        }

