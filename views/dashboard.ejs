    <!-- Firebase Scripts -->
    <script src="https://www.gstatic.com/firebasejs/9.22.2/firebase-app-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.22.2/firebase-auth-compat.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.22.2/firebase-firestore-compat.js"></script>
    
    <script>
        // Firebase config
        const firebaseConfig = {
            apiKey: "AIzaSyAmps2xc43FVStBEYe1ghS-t-bO9GII1XA",
            authDomain: "cougarzone-d6be4.firebaseapp.com",
            projectId: "cougarzone-d6be4",
            storageBucket: "cougarzone-d6be4.firebasestorage.app",
            messagingSenderId: "359665792907",
            appId: "1:359665792907:web:89b54508f29262855fa18e"
        };
        
        firebase.initializeApp(firebaseConfig);
        const db = firebase.firestore();

        // Admin email
        const ADMIN_EMAIL = "bclinchuck@gmail.com";
        let isAdmin = false;

        // Sample events data (will be replaced with Firestore data)
        let sampleEvents = [];

        let currentUser = null;

        // Auth state observer
        firebase.auth().onAuthStateChanged(user => {
            if (user) {
                // Check if email is verified
                if (!user.emailVerified) {
                    // Sign out and redirect to login
                    firebase.auth().signOut();
                    alert("Please verify your email before accessing the dashboard. Check your inbox for the verification link.");
                    window.location.href = "/login";
                    return;
                }
                
                currentUser = user;
                const email = user.email;
                const initial = email.charAt(0).toUpperCase();
                
                // Check if user is admin
                isAdmin = (email === ADMIN_EMAIL);
                if (isAdmin) {
                    document.getElementById('adminTab').style.display = 'block';
                }
                
                document.getElementById('userEmail').textContent = email;
                document.getElementById('userAvatar').textContent = initial;
                document.getElementById('profileAvatar').textContent = initial;
                document.getElementById('profileEmail').textContent = email;
                document.getElementById('emailInput').value = email;
                document.getElementById('welcomeMessage').textContent = `Welcome back, ${email}!`;
                
                loadEvents();
                loadUserTickets();
                
                if (isAdmin) {
                    loadAdminEvents();
                }
            } else {
                window.location.href = "/login";
            }
        });

        // Load events from Firestore
        async function loadEvents() {
            const eventsGrid = document.getElementById('eventsGrid');
            eventsGrid.innerHTML = '<div class="loading-spinner"><div class="spinner"></div><p>Loading events...</p></div>';
            
            try {
                const snapshot = await db.collection('events')
                    .where('date', '>=', new Date().toISOString().split('T')[0])
                    .orderBy('date', 'asc')
                    .get();

                if (snapshot.empty) {
                    eventsGrid.innerHTML = `
                        <div class="empty-state">
                            <div class="empty-state-icon">üìÖ</div>
                            <h3>No upcoming events</h3>
                            <p>Check back later for new events</p>
                        </div>
                    `;
                    return;
                }

                eventsGrid.innerHTML = '';
                sampleEvents = [];
                
                snapshot.forEach(doc => {
                    const event = { id: doc.id, ...doc.data() };
                    sampleEvents.push(event);
                    
                    const eventCard = document.createElement('div');
                    eventCard.className = 'event-card';
                    eventCard.innerHTML = `
                        <div class="event-image">${event.emoji}</div>
                        <div class="event-content">
                            <div class="event-title">${event.title}</div>
                            <div class="event-date">üìÖ ${event.date} at ${event.time}</div>
                            <div class="event-location">üìç ${event.location}</div>
                            <div class="event-description">‚ùó ${event.description}</div>
                            <div class="event-price">${parseFloat(event.price).toFixed(2)}</div>
                            <button class="btn btn-primary btn-full" onclick="purchaseTicket('${doc.id}')" id="btn-${doc.id}">
                                Purchase Ticket
                            </button>
                        </div>
                    `;
                    eventsGrid.appendChild(eventCard);
                });
            } catch (error) {
                console.error("Error loading events:", error);
                eventsGrid.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">‚ö†Ô∏è</div>
                        <h3>Error loading events</h3>
                        <p>Please refresh the page to try again</p>
                    </div>
                `;
            }
        }

        // Purchase ticket and save to Firestore
        async function purchaseTicket(eventId) {
            const event = sampleEvents.find(e => e.id === eventId);
            if (!event || !currentUser) return;

            const btn = document.getElementById(`btn-${eventId}`);
            btn.disabled = true;
            btn.textContent = 'Processing...';

            try {
                const ticket = {
                    userId: currentUser.uid,
                    eventId: event.id,
                    eventTitle: event.title,
                    eventDate: event.date,
                    eventTime: event.time,
                    eventEmoji: event.emoji,
                    eventLocation: event.location,
                    eventDescription: event.description,
                    price: parseFloat(event.price),
                    purchaseDate: firebase.firestore.FieldValue.serverTimestamp(),
                    status: 'active'
                };

                // Save ticket to Firestore
                await db.collection('tickets').add(ticket);
                
                alert(`Ticket purchased for ${event.title}!`);
                switchTab('tickets');
                loadUserTickets();
            } catch (error) {
                console.error("Error purchasing ticket:", error);
                alert("Failed to purchase ticket. Please try again.");
            } finally {
                btn.disabled = false;
                btn.textContent = 'Purchase Ticket';
            }
        }

        // Load user tickets from Firestore
        async function loadUserTickets() {
            const upcomingList = document.getElementById('upcomingTicketsList');
            const pastList = document.getElementById('pastTicketsList');
            
            if (!currentUser) return;

            try {
                const snapshot = await db.collection('tickets')
                    .where('userId', '==', currentUser.uid)
                    .orderBy('purchaseDate', 'desc')
                    .get();

                if (snapshot.empty) {
                    upcomingList.innerHTML = `
                        <div class="empty-state">
                            <div class="empty-state-icon">üé´</div>
                            <h3>No tickets yet</h3>
                            <p>Browse events and purchase tickets to see them here</p>
                        </div>
                    `;
                    pastList.innerHTML = `
                        <div class="empty-state">
                            <div class="empty-state-icon">üìÖ</div>
                            <h3>No past events</h3>
                            <p>Expired tickets will appear here</p>
                        </div>
                    `;
                    return;
                }

                const upcomingTickets = [];
                const pastTickets = [];
                const today = new Date();
                today.setHours(0, 0, 0, 0); // Set to midnight for accurate date comparison

                snapshot.forEach(doc => {
                    const ticket = doc.data();
                    // Parse the event date and set to midnight for comparison
                    const eventDate = new Date(ticket.eventDate + 'T00:00:00');
                    eventDate.setHours(0, 0, 0, 0);
                    
                    // Check if event date has passed (before today)
                    if (eventDate < today) {
                        ticket.status = 'expired';
                        pastTickets.push(ticket);
                    } else {
                        // Event is today or in the future
                        ticket.status = 'active';
                        upcomingTickets.push(ticket);
                    }
                });

                // Display upcoming tickets
                if (upcomingTickets.length === 0) {
                    upcomingList.innerHTML = `
                        <div class="empty-state">
                            <div class="empty-state-icon">üé´</div>
                            <h3>No upcoming events</h3>
                            <p>Browse events and purchase tickets to see them here</p>
                        </div>
                    `;
                } else {
                    upcomingList.innerHTML = '';
                    upcomingTickets.forEach(ticket => {
                        upcomingList.appendChild(createTicketCard(ticket));
                    });
                }

                // Display past tickets
                if (pastTickets.length === 0) {
                    pastList.innerHTML = `
                        <div class="empty-state">
                            <div class="empty-state-icon">üìÖ</div>
                            <h3>No past events</h3>
                            <p>Expired tickets will appear here</p>
                        </div>
                    `;
                } else {
                    pastList.innerHTML = '';
                    pastTickets.forEach(ticket => {
                        pastList.appendChild(createTicketCard(ticket));
                    });
                }

            } catch (error) {
                console.error("Error loading tickets:", error);
                upcomingList.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">‚ö†Ô∏è</div>
                        <h3>Error loading tickets</h3>
                        <p>Please refresh the page to try again</p>
                    </div>
                `;
                pastList.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">‚ö†Ô∏è</div>
                        <h3>Error loading tickets</h3>
                        <p>Please refresh the page to try again</p>
                    </div>
                `;
            }
        }

        // Create ticket card element
        function createTicketCard(ticket) {
            const purchaseDate = ticket.purchaseDate ? ticket.purchaseDate.toDate() : new Date();
            
            const ticketCard = document.createElement('div');
            ticketCard.className = 'ticket-card';
            ticketCard.innerHTML = `
                <div class="ticket-info">
                    <h3>${ticket.eventEmoji} ${ticket.eventTitle}</h3>
                    <p style="color: var(--text-light);">
                        üìÖ ${ticket.eventDate} at ${ticket.eventTime}
                    </p>
                    <p style="color: var(--text-light);">
                        üìç ${ticket.eventLocation}
                    </p>
                    <p style="color: var(--text-light);">
                        ‚ùó ${ticket.eventDescription}
                    <p style="color: var(--text-light); font-size: 0.9rem;">
                        Purchased: ${purchaseDate.toLocaleDateString()}
                    </p>
                    <span class="ticket-status ${ticket.status}">${ticket.status.toUpperCase()}</span>
                </div>
                <div>
                    <p style="font-size: 1.5rem; font-weight: bold; color: var(--primary-color);">
                        ${ticket.price.toFixed(2)}
                    </p>
                    ${ticket.status === 'active' ? '<button class="btn btn-secondary" style="margin-top: 0.5rem;">View QR Code</button>' : ''}
                </div>
            `;
            return ticketCard;
        }

        // Ticket type tab switching
        document.querySelectorAll('.ticket-type-tab').forEach(tab => {
            tab.addEventListener('click', () => {
                const type = tab.getAttribute('data-type');
                
                // Update tabs
                document.querySelectorAll('.ticket-type-tab').forEach(t => {
                    t.classList.remove('active');
                    t.style.borderBottomColor = 'transparent';
                    t.style.color = 'var(--text-light)';
                });
                tab.classList.add('active');
                tab.style.borderBottomColor = 'var(--primary-color)';
                tab.style.color = 'var(--primary-color)';
                
                // Update content
                document.querySelectorAll('.ticket-type-content').forEach(c => {
                    c.classList.remove('active');
                    c.style.display = 'none';
                });
                document.getElementById(`${type}-tickets`).classList.add('active');
                document.getElementById(`${type}-tickets`).style.display = 'block';
            });
        });

        // Tab switching
        document.querySelectorAll('.nav-tab').forEach(tab => {
            tab.addEventListener('click', () => {
                const tabName = tab.getAttribute('data-tab');
                switchTab(tabName);
            });
        });

        function switchTab(tabName) {
            document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            
            document.querySelector(`[data-tab="${tabName}"]`).classList.add('active');
            document.getElementById(`${tabName}-tab`).classList.add('active');
        }

        // Logout
        document.getElementById('logoutBtn').addEventListener('click', async () => {
            try {
                await firebase.auth().signOut();
                window.location.href = "/login";
            } catch (err) {
                alert(err.message);
            }
        });

        // Update profile
        document.getElementById('updateProfileBtn').addEventListener('click', () => {
            const displayName = document.getElementById('displayNameInput').value;
            if (displayName) {
                alert('Profile updated successfully!');
            } else {
                alert('Please enter a display name');
            }
        });

        // Admin: Load events for management
        async function loadAdminEvents() {
            const adminList = document.getElementById('adminEventsList');
            
            try {
                const snapshot = await db.collection('events')
                    .orderBy('date', 'asc')
                    .get();

                if (snapshot.empty) {
                    adminList.innerHTML = `
                        <div class="empty-state">
                            <div class="empty-state-icon">üìÖ</div>
                            <h3>No events created yet</h3>
                            <p>Create your first event above</p>
                        </div>
                    `;
                    return;
                }

                adminList.innerHTML = '';
                snapshot.forEach(doc => {
                    const event = doc.data();
                    const eventItem = document.createElement('div');
                    eventItem.style.cssText = 'background: var(--bg-color); padding: 1rem; border-radius: 8px; margin-bottom: 1rem; display: flex; justify-content: space-between; align-items: center;';
                    eventItem.innerHTML = `
                        <div>
                            <h4>${event.emoji} ${event.title}</h4>
                            <p style="color: var(--text-light); font-size: 0.9rem;">
                                üìÖ ${event.date} at ${event.time} | üìç ${event.location} | ${parseFloat(event.price).toFixed(2)}
                            </p>
                        </div>
                        <button class="btn btn-danger" onclick="deleteEvent('${doc.id}', '${event.title}')">Delete</button>
                    `;
                    adminList.appendChild(eventItem);
                });
            } catch (error) {
                console.error("Error loading admin events:", error);
                adminList.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">‚ö†Ô∏è</div>
                        <h3>Error loading events</h3>
                        <p>Please refresh the page</p>
                    </div>
                `;
            }
        }

        // Admin: Create event
        document.getElementById('createEventForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            if (!isAdmin) {
                alert('Unauthorized');
                return;
            }

            const submitBtn = e.target.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.textContent = 'Creating...';

            try {
                const eventData = {
                    title: document.getElementById('eventTitle').value,
                    emoji: document.getElementById('eventEmoji').value,
                    date: document.getElementById('eventDate').value,
                    time: document.getElementById('eventTime').value,
                    location: document.getElementById('eventLocation').value,
                    description: document.getElementById('eventDescription').value,
                    price: parseFloat(document.getElementById('eventPrice').value),
                    createdAt: firebase.firestore.FieldValue.serverTimestamp()
                };

                await db.collection('events').add(eventData);
                
                alert('Event created successfully!');
                e.target.reset();
                loadEvents();
                loadAdminEvents();
            } catch (error) {
                console.error("Error creating event:", error);
                alert('Failed to create event. Please try again.');
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Create Event';
            }
        });

        // Admin: Delete event
        async function deleteEvent(eventId, eventTitle) {
            if (!isAdmin) {
                alert('Unauthorized');
                return;
            }

            if (!confirm(`Are you sure you want to delete "${eventTitle}"?`)) {
                return;
            }

            try {
                await db.collection('events').doc(eventId).delete();
                alert('Event deleted successfully!');
                loadEvents();
                loadAdminEvents();
            } catch (error) {
                console.error("Error deleting event:", error);
                alert('Failed to delete event. Please try again.');
            }
        }
    </script>
</body>
</html>
