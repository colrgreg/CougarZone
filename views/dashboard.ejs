                <button type="button" class="btn btn-secondary btn-full" onclick="closeCheckout()" style="margin-top: 0.5rem;">Cancel</button>
            </form>
        </div>
    </div>

    <!-- Attendees Modal -->
    <div class="modal" id="attendeesModal">
        <div class="modal-content">
            <div class="modal-header">
                <span id="attendeesTitle">Event Attendees</span>
                <button class="close-btn" onclick="closeAttendeesModal()">‚úï</button>
            </div>
            <div class="attendees-list" id="attendeesList">
                <div class="loading-spinner">
                    <div class="spinner"></div>
                </div>
            </div>
        </div>
    </div>

