        function processPayment(e) {
            e.preventDefault();

            const fullName = document.getElementById('fullName').value;
            const cardNumber = document.getElementById('cardNumber').value;
            const expiryDate = document.getElementById('expiryDate').value;
            const cvv = document.getElementById('cvv').value;

            if (!fullName || !cardNumber || !expiryDate || !cvv) {
                alert('Please fill in all payment details');
                return;
            }

            const submitBtn = document.querySelector('#paymentForm button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.textContent = 'Processing...';

            setTimeout(async () => {
                try {
                    const ticketCode = generateTicketCode();
                    const ticket = {
                        userId: currentUser.uid,
                        userEmail: currentUser.email,
                        eventId: currentCheckoutEvent.id,
                        eventTitle: currentCheckoutEvent.title,
                        eventDate: currentCheckoutEvent.date,
                        eventTime: currentCheckoutEvent.time,
                        eventEmoji: currentCheckoutEvent.emoji,
                        eventLocation: currentCheckoutEvent.location,
                        eventDescription: currentCheckoutEvent.description,
                        price: parseFloat(currentCheckoutEvent.price),
