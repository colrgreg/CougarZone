                </div>
            </div>
        </div>

        <!-- Admin Tab -->
        <div class="tab-content" id="admin-tab">
            <h2>Admin Panel - Event Management</h2>
            
            <div class="admin-form">
                <h3>Create New Event</h3>
                <form id="createEventForm">
                    <div class="form-grid">
                        <div class="form-group">
                            <label>Event Title</label>
                            <input type="text" id="eventTitle" placeholder="Basketball Championship" required>
                        </div>
                        <div class="form-group">
                            <label>Emoji</label>
                            <input type="text" id="eventEmoji" placeholder="üèÄ" maxlength="2" required>
                        </div>
                        <div class="form-group">
                            <label>Event Date</label>
                            <input type="date" id="eventDate" required>
                        </div>
                        <div class="form-group">
                            <label>Event Time</label>
                            <input type="time" id="eventTime" required>
                        </div>
                        <div class="form-group">
                            <label>Location</label>
                            <input type="text" id="eventLocation" placeholder="TD Arena" required>
